<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#ffffff">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linears"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/addicted_logo_marginStart"
                    android:layout_marginStart="@dimen/addicted_logo_marginStart"
                    android:layout_marginTop="@dimen/addicted_logo_marginTop"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/logo_maxHeight"
                    android:maxWidth="@dimen/logo_maxWidth"
                    android:src="@mipmap/logo1" />

                <ImageView
                    android:id="@+id/guide_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/content_description"/>


            </RelativeLayout>



            <com.addictedartgallery.widgets.fonts.FontTextView
                android:id="@+id/getStartedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/getStarted_margin_bottom"
                android:layout_marginLeft="@dimen/two_button_margin_start"
                android:layout_marginStart="@dimen/two_button_margin_start"
                android:layout_marginTop="@dimen/getStarted_margin_top"
                android:text="@string/GetStarted"
                android:textColor="@color/pink"
                android:textSize="@dimen/getStarted_text_size"
                app:addTypeface="@string/Bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/two_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/two_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/two_button_max_height"
                    android:maxWidth="@dimen/two_button_max_width"

                    android:src="@mipmap/one" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/firstLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView1"
                    android:layout_toRightOf="@+id/imageView1"
                    android:lineSpacingExtra="2dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/three_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/three_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/three_button_max_height"
                    android:maxWidth="@dimen/three_button_max_width"
                    android:src="@mipmap/two" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/secondLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:lineSpacingExtra="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/three_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/three_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/three_button_max_height"
                    android:maxWidth="@dimen/three_button_max_width"
                    android:src="@mipmap/three" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/thirdLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:lineSpacingExtra="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/three_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/three_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/three_button_max_height"
                    android:maxWidth="@dimen/three_button_max_width"
                    android:src="@mipmap/four" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/forthLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:lineSpacingExtra="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/three_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/three_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/three_button_max_height"
                    android:maxWidth="@dimen/three_button_max_width"
                    android:src="@mipmap/five" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/fifthLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:lineSpacingExtra="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_button_margin_bottom">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="@dimen/three_button_margin_start"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="@dimen/three_button_margin_start"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_description"
                    android:maxHeight="@dimen/three_button_max_height"
                    android:maxWidth="@dimen/three_button_max_width"
                    android:src="@mipmap/six" />

                <com.addictedartgallery.widgets.fonts.FontTextView
                    android:id="@+id/sixthLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/text2_margin_bottom"
                    android:layout_marginEnd="@dimen/text2_margin_end"
                    android:layout_marginRight="@dimen/text2_margin_end"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:lineSpacingExtra="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/default_text_size"
                    app:addTypeface="@string/Light" />

            </RelativeLayout>

            <com.addictedartgallery.widgets.fonts.FontTextView
                android:id="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/addicted_logo_marginStart"
                android:layout_marginStart="@dimen/addicted_logo_marginStart"
                android:lineSpacingExtra="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/default_text_size"
                app:addTypeface="@string/Light" />


        </LinearLayout>


        <com.addictedartgallery.widgets.fonts.FontButton
            android:id="@+id/OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linears"
            android:layout_marginBottom="@dimen/sign_in_button_marginEnd"
            android:layout_marginEnd="@dimen/sign_in_button_marginEnd"
            android:layout_marginRight="@dimen/sign_in_button_marginEnd"
            android:background="@mipmap/pink"
            android:text="@string/SignIn"
            android:textColor="@android:color/white"
            app:setTypeface="@string/Bold" />


    </RelativeLayout>
</ScrollView>