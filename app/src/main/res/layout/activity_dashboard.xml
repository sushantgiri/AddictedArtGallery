<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">





    <Button
        android:id="@+id/beta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:drawableTop="@mipmap/ic_mail_outline_white_24dp"
        android:background="@drawable/circle"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:text="@string/Beta"
        android:drawablePadding="-9dp"
        android:layout_margin="10dp"
        />


    <com.wang.avi.AVLoadingIndicatorView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="LineSpinFadeLoaderIndicator"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        app:indicatorColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:id="@+id/activity_ar_progressBar"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_chevron_left_black_36dp"
        android:visibility="gone"
        app:backgroundTint="@color/transparent_black"
        app:fabSize="normal" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_chevron_right_black_36dp"
        android:visibility="gone"
        app:backgroundTint="@color/transparent_black"
        app:fabSize="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ar_screen_logo"
        android:layout_alignBottom="@+id/ar_screen_logo"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/buttonLayout"
        android:orientation="horizontal"
        tools:ignore="RelativeOverlap">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/shopIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/bags"
            app:backgroundTint="@color/pink"
            app:fabSize="mini" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/infoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/ic_info_outline_white_24dp"
            app:backgroundTint="@color/pink"
            app:fabSize="mini" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/hamIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@mipmap/ic_menu_white_24dp"
            app:backgroundTint="@color/pink"
            app:fabSize="mini" />


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/main_screen_image_width"
        android:layout_height="100dp"
        android:id="@+id/ar_screen_logo"
        android:src="@mipmap/addicted"
        android:contentDescription="@string/content_description"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/beta"
        android:layout_alignStart="@+id/beta" />


</RelativeLayout>